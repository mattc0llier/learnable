<div class="container">
	<h1>I would like to learn about <font color="309BB0"><b><%= @topic.title %></b></font></h1>

	<br>
	<br>

	<div class="row">
		<div class="col-md-6">
			<h3>Title</h3>
		</div>
		<div class="col-md-2 text-center">
			<h3>Organization</h3>
		</div>
		<div class="col-md-2 text-center">
			<h3>Location</h3>
		</div>
		<div class="col-md-2 text-center">
			<h3>Difficulty</h3>
		</div>
	</div>

	<hr>

	<div class="row">
		<% @topic.resources.each do |r| %>
		<div class="col-xs-6 ">
			<h3><%= link_to r.title, resource_path(r) %></h3>
		</div>
		<div class="col-xs-2 text-center">
			<h3><%= link_to r.organization.title, organization_path(r.organization) %></h3>
		</div>
		<div class="col-xs-2 text-center">
			<h3>London</h3>
		</div>
		<div class="col-xs-2 text-center">
			<h3>Beginner</h3>
		</div>
		<% end %>
	</div>
</div>