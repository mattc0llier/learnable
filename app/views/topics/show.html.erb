			<h3><%= link_to r.title, resource_path(r) %> (<%= r.organization_id %>)</h3>
		</div>
		<div class="col-md-2">
			<h3>Organization</h3>
		</div>
		<div class="col-md-2">
			<h3>Location</h3>
		</div>
		<div class="col-md-2">
